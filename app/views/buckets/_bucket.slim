- bucket ||= @bucket

li.progress-bar-indication data={id: bucket.external_id, category: bucket.original_category, name: bucket.original_name, amount: bucket.amount}
  span.meter style=("width: #{bucket.percent_complete}%")
  p.left= best_in_place bucket.becomes(Bucket), :name, display_with: lambda { |b| truncate(b, length: 27) }
  p.right #{number_to_currency(bucket.amount)} #{"x#{bucket.frequency}" if bucket.frequency > 1}






